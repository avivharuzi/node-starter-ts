{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
